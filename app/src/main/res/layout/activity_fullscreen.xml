<?xml version="1.0" encoding="utf-8"?>
<com.thefuntasty.hauler.HaulerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/haulerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    app:dragUpEnabled="true"
    tools:context=".FullscreenActivity">

    <RelativeLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true" >

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/ic_gradient_black"
            app:navigationIcon="?homeAsUpIndicator"
            app:title="@string/placeholder_title"
            app:subtitle="@string/placeholder_subtitle"
            android:elevation="4dp"/>

        <LinearLayout
            android:id="@+id/controlsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/ic_gradient_black"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/submissionAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:text="@string/placeholder_subtitle"
                android:maxLines="2"
                android:ellipsize="end"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/submissionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:text="@string/placeholder_title"
                android:maxLines="2"
                android:ellipsize="end"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="?actionBarSize"
                        android:layout_height="?actionBarSize"
                        android:padding="12dp"
                        android:indeterminate="true"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/contentType"
                        android:layout_width="?actionBarSize"
                        android:layout_height="?actionBarSize"
                        android:padding="12dp"
                        android:src="@drawable/ic_baseline_image_24" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</com.thefuntasty.hauler.HaulerView>
